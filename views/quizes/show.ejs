		<p class="pregunta-text"> <%= quiz.pregunta %> </p> <!--tomo la pregunta-->
		<input type="text" name='respuesta' placeholder="Responda AquÃ­" value="" class="cajetin-p">

		<input type="submit" value="Enviar" class="boton-send">
