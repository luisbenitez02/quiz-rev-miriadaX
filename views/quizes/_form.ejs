<div>
<label class="in-data form-new" for="tema" id="lista">Tematica:</label>
 <select name="quiz[tema]" id="tema">
   <% var op = ['otro','humanidades','ocio','ciencia','tecnologia']; %>
  <% for (var i = 0; i < op.length; i++) { %>
     <% if(quiz.tema === op[i]) { %>
        <option value="<%= op[i]%>" selected><%= op[i] %></option>
     <% } else { %>
        <option value="<%= op[i] %>" ><%= op[i] %></option>
     <% } %>
  <% } %> <!--Vemos si ya hay un atributo en la DB y lo marcamos en el select (mejora visual)-->
</select>
 </div>
